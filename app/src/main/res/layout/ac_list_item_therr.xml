<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp">

        <com.xue.zz.campus.utlis.CircleImageView
            android:id="@+id/headimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/girl" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img">

        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="6"
            android:singleLine="true"
            android:text="食堂台湾盖浇饭"
            android:textColor="#858383"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:maxLength="10"
            android:text="2016.4.5"
            android:textColor="#969696"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/group_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlt"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img"
        android:ellipsize="end"
        android:lines="2"
        android:text="好吃,劲爆 "
        android:textColor="#969696" />

    <ImageView
        android:id="@+id/dingzhi"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_below="@+id/group_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/img" />

    <ImageView
        android:id="@+id/reping"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_below="@+id/group_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/dingzhi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_text"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/tx1"
        android:text="评论"
        android:textColor="#969696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_text"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/pinglun"
        android:text="("
        android:textColor="#969696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/pinglun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_text"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/textView3"
        android:text="0"
        android:textColor="#969696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_text"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text=")"
        android:textColor="#969696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_text"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/tx"
        android:text="点赞"
        android:textColor="#969696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_text"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/dianzan"
        android:text="("
        android:textColor="#969696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/dianzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_text"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/textView2"
        android:text="0"
        android:textColor="#969696"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/group_text"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text=")"
        android:textColor="#969696"
        android:textSize="15dp" />


</RelativeLayout>